<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_2_dp"
    card_view:cardCornerRadius="@dimen/dimen_5_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_2_dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_2_dp">

            <ImageView
                android:id="@+id/patientimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:src="@drawable/patient" />

            <TextView
                android:id="@+id/Pname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:linksClickable="true"
                android:padding="@dimen/dimen_5_dp"
                android:text="Patient Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_2_dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_2_dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/AppDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:linksClickable="true"
                android:padding="@dimen/dimen_5_dp"
                android:text="Patient Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_2_dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_2_dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:src="@drawable/question" />

            <TextView
                android:id="@+id/AppConcerns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/dimen_5_dp"
                android:text="Patient Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_2_dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_2_dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:src="@drawable/doctor" />

            <TextView
                android:id="@+id/Dname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/dimen_5_dp"
                android:text="Patient Name" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>